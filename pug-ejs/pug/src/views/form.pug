extends main.pug

block form
    h1=title
    a(href="http://localhost:3000/productos")=url
    form(action="/" method="post")
        input(type="text" name="title" placeholder="Nombre de producto")
        input(type="number" id="price" name="price" placeholder="Precio")
        input(type="text" name="thumbnail" placeholder="Url de la imagen")
        input(type="submit")
